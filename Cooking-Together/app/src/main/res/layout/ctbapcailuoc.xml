<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:background="@drawable/bapcailuoc"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="CÔNG THỨC BẮP CẢI LUỘC"
            android:textSize="25dp"
            android:textColor="#FF0000"
            android:background="#EAE7E7"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Nguyên liệu"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctbapcailuoc3"
            android:textSize="14dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            />

        <TextView
            android:id="@+id/TxtcontentBapcailuoc4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Cách thực hiện"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#0000FF"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bước 1 : Tách vỏ bắp cải"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="#FF00FF"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctbapcailuoc6"
            android:textSize="14dp"
            android:paddingLeft="40dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            />

        <TextView
            android:id="@+id/TxtcontentBapcailuoc7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bước 2 : Rửa bắp cải"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="#FF00FF"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctbapcailuoc8"
            android:textSize="14dp"
            android:paddingLeft="40dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            />

        <TextView
            android:id="@+id/TxtcontentBapcailuoc9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bước 3 : Cắt nhỏ bắp cải"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="#FF00FF"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctbapcailuoc10"
            android:textSize="14dp"
            android:paddingLeft="40dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            />

        <TextView
            android:id="@+id/TxtcontentBapcailuoc11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bước 4 : Luộc bắp cải"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="#FF00FF"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/TxtcontentBapcailuoc12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ctbapcailuoc12"
            android:textSize="14dp"
            android:paddingLeft="40dp"
            android:textColor="#000000"
            android:textIsSelectable="true"
            />

        <Button
            android:id="@+id/BtnBackFromCtbapcailuoc"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Trở về"
            android:textSize="20dp"
            android:background="@drawable/ps_button"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>
</ScrollView>